# Specific headers for WebP images
[[headers]]
  for = "*.webp"
  [headers.values]
    Access-Control-Allow-Origin = "*"
    Access-Control-Allow-Methods = "GET, HEAD, OPTIONS"
    Access-Control-Allow-Headers = "Content-Type, Cache-Control, User-Agent, Referer"
    Content-Type = "image/webp"
    Cache-Control = "public, max-age=31536000"

# Specific headers for build directory images
[[headers]]
  for = "/builds/*"
  [headers.values]
    Access-Control-Allow-Origin = "*"
    Access-Control-Allow-Methods = "GET, HEAD, OPTIONS"
    Access-Control-Allow-Headers = "Content-Type, Cache-Control, User-Agent, Referer, Origin"
    X-Frame-Options = "ALLOWALL"
    Referrer-Policy = "no-referrer-when-downgrade"

# Specific headers for embed gallery
[[headers]]

  [headers.values]
    Access-Control-Allow-Origin = "*"
    Access-Control-Allow-Methods = "GET, HEAD, OPTIONS"
    Access-Control-Allow-Headers = "Content-Type, Cache-Control, User-Agent, Referer, Origin"
    X-Frame-Options = "ALLOWALL"
    Content-Type = "text/html; charset=utf-8"

# Headers for favicon and meta files
[[headers]]
  for = "/favicon.ico"
  [headers.values]
    Access-Control-Allow-Origin = "*"
    Cache-Control = "public, max-age=31536000"

[[headers]]
  for = "/android-chrome-*.png"
  [headers.values]
    Access-Control-Allow-Origin = "*"
    Cache-Control = "public, max-age=31536000"

[[headers]]
  for = "/apple-touch-icon.png"
  [headers.values]
    Access-Control-Allow-Origin = "*"
    Cache-Control = "public, max-age=31536000"
